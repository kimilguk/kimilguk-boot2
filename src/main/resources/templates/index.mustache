{{>layout/header}}
    <div class="col-md-12">
        <!-- 로그인 기능 영역 -->
        <div class="row">
            <div class="col-md-6">
                <a href="posts-write.html" role="button" class="btn btn-primary">글 등록</a>
                Looged in as : <span id="user">admin</span>
                <a href="#" class="btn btn-info active" role="button">Logout</a>
                <a href="#" class="btn btn-secondary active" role="button">
                    회원관리
                </a>
                <a href="#" class="btn btn-secondary active" role="button">
                    마이페이지
                </a>
                <a href="#" class="btn btn-success active" role="button">
                    Naver Login
                </a>
                <a href="#" class="btn btn-warning active" role="button">
                    회원로그인
                </a>
                <a href=#" class="btn btn-secondary active" role="button">
                    회원가입
                </a>
            </div>
        </div>
    </div>
    <br>
    <form action="/index.html" method="GET">
        <div class="btn-group" role="group" aria-label="Basic example">
            <input name="keyword" type="text" placeholder="검색어를 입력해주세요">
            <button class="btn btn-secondary">검색</button>
        </div>
    </form>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-string">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#postsList}}<!-- 자바의 for반목구문과 동일:postsList 객체값에는 #을 붙인다. -->
        <!-- postsList 객체값이 있으면 계속 아래 내용을 출력한다. -->
        <tr>
            <td>{{id}}</td>
            <td><a href="posts-read.html">{{title}}</a></td>
            <td>{{author}}</td>
            <td>{{modifieDate}}</td>
        </tr>
        {{/postsList}}<!-- 객체를 열면 닫는 코드가 존재해야 한다. -->
        <tr>
            <td>1</td>
            <td><a href="posts-read.html">게시물 제목 테스트</a></td>
            <td>admin</td>
            <td>2021.08.15</td>
        </tr>        
        </tbody>
    </table>
    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">4</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
{{>layout/footer}}
